<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="25dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="25dp"
    android:layout_marginBottom="5dp"
    app:cardBackgroundColor="#FDF4D2"
    app:cardCornerRadius="15dp"
    app:cardElevation="0dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp">

        <TextView
            android:id="@+id/tv_myreservation_parking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="24dp"
            android:textColor="@color/ThemeTextColor"
            android:textSize="22sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="南开大学停车场" />

        <TextView
            android:id="@+id/tv_myservation_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="19dp"
            android:fontFamily="sans-serif-black"
            android:textColor="#E91E63"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/tv_myreservation_parking"
            app:layout_constraintTop_toBottomOf="@id/tv_myreservation_parking"
            tools:text="12号车位" />

        <TextView
            android:id="@+id/tv_my_reservation_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="sans-serif-thin"
            android:textColor="#E91E63"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_myservation_car"
            app:layout_constraintLeft_toRightOf="@id/tv_myservation_car"
            app:layout_constraintTop_toTopOf="@id/tv_myservation_car"
            tools:text="2019-1-7" />

        <ImageView
            android:id="@+id/iv_bind_delete"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/cd_delete_circle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>