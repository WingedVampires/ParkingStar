<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="3dp"
    android:layout_marginTop="2dp"
    android:layout_marginEnd="3dp"
    android:layout_marginBottom="3dp">

    <ImageView
        android:id="@+id/iv_parking_car"
        android:layout_width="120dp"
        android:layout_height="240dp"
        android:alpha="0.4"
        android:background="@drawable/cd_car3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_parking_not"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:rotation="90"
        android:text="Occupied"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/iv_parking_car"
        app:layout_constraintLeft_toLeftOf="@id/iv_parking_car"
        app:layout_constraintRight_toRightOf="@id/iv_parking_car"
        app:layout_constraintTop_toTopOf="@id/iv_parking_car" />

    <TextView
        android:id="@+id/tv_parking_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="#333333"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="@id/iv_parking_car"
        app:layout_constraintRight_toRightOf="@id/iv_parking_car"
        app:layout_constraintTop_toBottomOf="@id/iv_parking_car"
        tools:text="1号车位" />

    <ImageView
        android:id="@+id/iv_parking_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="100dp"
        android:src="@drawable/cd_add"
        app:layout_constraintBottom_toBottomOf="@id/iv_parking_car"
        app:layout_constraintLeft_toLeftOf="@id/iv_parking_car"
        app:layout_constraintRight_toRightOf="@id/iv_parking_car"
        app:layout_constraintTop_toTopOf="@id/iv_parking_car" />

</android.support.constraint.ConstraintLayout>